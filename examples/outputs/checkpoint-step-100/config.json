{
  "model": {
    "hidden_size": 768,
    "num_layers": 12,
    "num_attention_heads": 12,
    "intermediate_size": 3072,
    "max_position_embeddings": 2048,
    "vocab_size": 53,
    "dropout": 0.1
  },
  "training": {
    "batch_size": 32,
    "micro_batch_size": 32,
    "learning_rate": 0.0003,
    "weight_decay": 0.1,
    "max_steps": 100,
    "eval_steps": 50,
    "save_steps": 50,
    "log_steps": 10,
    "warmup_steps": 10,
    "clip_grad": 1.0,
    "bf16": true,
    "gradient_checkpointing": false
  },
  "data": {
    "dataset_path": "examples/tiny_shakespeare.txt",
    "max_seq_length": 256,
    "train_split": 0.9
  },
  "output_dir": "outputs",
  "run_name": "nano_train_mvp",
  "log_dir": "outputs",
  "seed": 42
}